ARG BUILD_ENV=production

FROM node:18

WORKDIR /usr/src/app

RUN apt update
RUN apt install -y build-essential libjpeg-dev libpng-dev libtiff-dev
RUN apt install -y potrace
RUN apt install -y imagemagick ffmpeg pandoc

RUN npm install -g pnpm

COPY pnpm-lock.yaml package.json ./

RUN pnpm install

COPY . .

RUN npx prisma generate

RUN if [ "$BUILD_ENV" = "production" ]; then npx tsc --project tsconfig.converter.json; fi

CMD ["node", "dist/converter/index.js"]
